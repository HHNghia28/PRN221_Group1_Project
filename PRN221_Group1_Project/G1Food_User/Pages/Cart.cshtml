@page
@model G1Food_User.Pages.Index1Model
@{
    ViewData["Title"] = "Cart";
}
<head>
    <link rel="stylesheet" href="~/css/cart.css" type="text/css" asp-append-version="true" />
</head>
<body>
    <main class="container-fluid mt-content bg-main">
        <div class="container mt-5">
            <div class="row">
                <div class="col-sm-12 mt-5">
                    <table class="table table-hover table-bordered text-center">
                        <thead class="align-middle">
                            <tr>
                                <th>STT.</th>
                                <th>Tên sản phẩm</th>
                                <th>Ảnh</th>
                                <th>Số lượng</th>
                                <th>Giảm</th>
                                <th>Gía</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="align-middle product-no">1</td>
                                <td class="align-middle product-name">
                                    <a href="">Combo Burger Tôm</a>
                                </td>
                                <td class="align-middle product-img">
                                    <img src="./img/card_1.jpg" alt="">
                                </td>
                                <td class="align-middle product-quanity">
                                    <div class="quantity-group justify-content-center">
                                        <button class="btn-decrease-quantity"
                                                id="btn-decrease"
                                                onclick="decreaseQuantity(this)">
                                            -
                                        </button>
                                        <input type="number" id="quantity-input" value="1" min="1" />
                                        <button class="btn-increase-quantity"
                                                id="btn-increase"
                                                onclick="increaseQuantity(this)">
                                            +
                                        </button>
                                    </div>
                                </td>
                                <td class="align-middle product-discount">10%</td>
                                <td class="align-middle product-total bold main-color">120.000vnd</td>
                            </tr>
                            <tr>
                                <td class="align-middle product-no">1</td>
                                <td class="align-middle product-name">
                                    <a href="">Combo Burger Tôm</a>
                                </td>
                                <td class="align-middle product-img">
                                    <img src="./img/card_1.jpg" alt="">
                                </td>
                                <td class="align-middle product-quanity">
                                  
                                        <div class="quantity-group justify-content-center">
                                            <button class="btn-decrease-quantity"
                                                    id="btn-decrease"
                                                    onclick="decreaseQuantity(this)">
                                                -
                                            </button>
                                            <input type="number" id="quantity-input" value="1" min="1" />
                                            <button class="btn-increase-quantity"
                                                    id="btn-increase"
                                                    onclick="increaseQuantity(this)">
                                                +
                                            </button>
                                        </div>
                                   
                                </td>
                                <td class="align-middle product-discount">10%</td>
                                <td class="align-middle product-total bold main-color">120.000vnd</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row justify-content-end mt-4 align-items-end">
                <div class="col-sm-12 col-lg-8">
                    <a class="btn" href="./Index">
                        Quay lại
                        <i class="fa-solid fa-left-long"></i>
                    </a>
                </div>
                <div class="col-sm-12 col-lg-4 mt-4">
                    <div class="d-flex justify-content-between">
                        <span class="bold">Tạm tính:</span>
                        <span>120.000 vnd</span>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span class="bold">Thuế:</span>
                        <span class="bold total-money">0 vnd</span>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span class="bold">Tổng cộng:</span>
                        <span class="main-color bold total-money">120.000 vnd</span>
                    </div>
                    <a href="../Paying" class="btn full mt-4">Thanh toán</a>
                </div>
            </div>
        </div>
    </main>
    <script src="~/js/handleQuantity.js" type="text/javascript" asp-append-version="true"></script>
</body>