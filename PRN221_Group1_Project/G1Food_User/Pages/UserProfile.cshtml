                        <div class="wrapper-icon position-absolute btn-close-order-detail">
                            <i class="fa-solid fa-xmark"></i>
                        </div>
                        <div class="w-full d-flex justify-content-between mt-3">
                            <div>
                                <span class="bold">Mã đơn: </span>
                                <span class="main-color bold">#ABC123</span>
                            </div>
                            <div>
                                <span class="bold">Tổng: </span>
                                <span class="main-color bold">125.000đ</span>
                            </div>
                        </div>
