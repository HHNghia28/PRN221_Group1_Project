@page
@model G1Food_User.Pages.UserProfileModel
@{
    ViewData["Title"] = "User profile";
}

<head>
    <link rel="stylesheet" href="~/css/userProfile.css" type="text/css" asp-append-version="true" />
</head>
<body>
    <div class="overplay d-none"></div>
    <main class="container-fluid mt-content bg-main">
        <div class="container">
            <div class="row mt-5">
                <div class="col-sm-12 col-md-8">
                    <div class="d-flex justify-content-between mt-5">
                        <h6 class="bold">Tất cả đơn hàng 
                            @{
                                int orderQuanity = 0;
                                if (@Model.Orders != null)
                                {
                                    orderQuanity = @Model.Orders.Count();
                                }
                            } (@orderQuanity)
                        </h6>
                        <a class="btn sm" href="./index.html">
                            <i class="fa-solid fa-left-long"></i>
                            Trở về
                        </a>
                    </div>
                    <table class="table table-hover table-bordered text-center mt-5">
                        <thead class="align-middle">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Ngày đặt</th>
                                <th>Ngày giao</th>
                                <th>Số lượng</th>
                                <th>Note</th>
                                <th>Giá</th>
                            </tr>
                        </thead>
                        <tbody class="order-list">
                            @{
                                if(@Model.Orders != null)
                                {
                                    foreach (var order in @Model.Orders)
                                    {
                                        <tr>
                                            <td class="align-middle product-name bold">@order.Id</td>
                                            <td class="align-middle">@order.Date</td>
                                            <td class="align-middle">25/09/2023</td>
                                            <td class="align-middle product-quanity">
                                                <div class="quantity-group justify-content-center">
                                                    <input type="number"
                                                           id="quantity-input"
                                                           value="1"
                                                           min="1" />
                                                </div>
                                            </td>
                                            <td class="align-middle">@order.Note</td>
                                            <td class="align-middle product-total bold main-color">
                                                120k
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
